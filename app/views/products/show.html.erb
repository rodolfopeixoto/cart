<div class="col-md-4">
  <div class="col-md-12">
    <%= image_tag 'rails', width: '120', height: '120' %>
  </div>

  <div class="col-md-12">

    <h4><%= @product.name  %></h4>
  </div>


  <div class="col-md-12">
    <p id="product_price"><%= @product.price %></p>
  </div>


  <div class="col-md-12">
  Quantidade: <input type="number" id="product_quantity" class="text-center" value="<%= quantity(current_user.id, @product.id) %>">
  </div>
  <div class="col-md-12">

    <% if signed_in? %>
    <%=link_to "", class: "btn btn-primary", 
    data: {target: @cart_action, addUrl: add_to_cart_path(@product, quantity: 1, price: 2)} do %>
    <i class="fi-shopping-cart"></i>
    <span><%=@cart_action%></span> Cart
    <% end %>
    <% end %>

  </div>

</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Back', products_path %>
  </div>
</div>